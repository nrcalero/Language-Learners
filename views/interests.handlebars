<html>
<head>
	<link rel="stylesheet" href="css/bootstrap.css">
	<link rel="stylesheet" href="css/main.css">
	<link rel="stylesheet" href="css/interests.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	<script src="js/jquery-1.11.0.js"></script>
	<script src="js/bootstrap.js"></script>
	<script src="js/interests.js"></script>
	<title>Language Learners</title>
</head>
<body>
	<div class="container">
		<h1>
			Interests
		</h1>
    <p>
      Choose your interests to change what stories are displayed to you!
    </p>
		<div class="container-fluid text-center grid">
			<div class="row topmargin">
				<form id="changeInterestForm" role="form" method="get" action="/changeinterest">
					{{#each Interests}}
					<div class="col-xs-4 form-group">
						<i class="{{icon}}" style="font-size: 6em;"></i>
						<p>{{name}}</p>
						<label class="switch" for="{{id}}">
 					 		<input type="checkbox" id="{{id}}" class="form-control" name="{{id}}" {{enabled}}>
  							<span class="slider round"></span>
						</label>
					</div>
					{{/each}}
				</div>
				<div class="row">
					<div class="col-xs-6 backbtn">
					<a type="button" class="btn btn-link btn-lg" href="/index">
					<span class="glyphicon glyphicon-chevron-left"></span>
					<span>Back</span>
				</a>
			</div>
			<div class="col-xs-6">
					<i class="fa fa-check-square lower" aria-hidden="true" style="font-size: 3em;"></i>
					<input type="submit" id="submitBtn" class="btn btn-link btn-lg submitbtn" value="Confirm Interests">

			 </form>
			</div>
	</div>

	</div>
</body>
</html>
